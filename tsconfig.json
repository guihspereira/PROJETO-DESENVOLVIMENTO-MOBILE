{
  "compileOnSave": false,
  "compilerOptions": {
    // Configurações críticas para a resolução de módulos
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,

    // Nível de tipagem estrito
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // Configurações do Angular
    "module": "es2020",
    "moduleResolution": "node", // Garante que o Node.js/bundler resolva os módulos
    "importHelpers": true,
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
